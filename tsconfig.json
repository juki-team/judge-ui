{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    //    "noImplicitAny": true,
    //    "noImplicitThis": true,
    //    "noImplicitReturns": true,
    //    "noUnusedLocals": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "config": [
        "./src/config"
      ],
      "config/constants": [
        "./src/config/constants"
      ],
      "helpers": [
        "./src/helpers"
      ],
      "hooks": [
        "./src/hooks"
      ],
      "components": [
        "./src/components"
      ],
      //      "components/server": [
      //        "./src/server-components"
      //      ],
      "store": [
        "./src/store"
      ],
      "types": [
        "./src/types"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
